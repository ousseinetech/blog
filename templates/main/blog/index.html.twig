{% extends 'base/main.html.twig' %}

{% block title 'Blog | Articles' %}

{% block main_clas %}{{ parent() }} blog{% endblock %}

{% block main %}
<div class="contain">
    {# banni√®re #}
    {% include 'main/components/_banner.html.twig' with {banner: banner} only %}

    <div class="content">
        <div class="main-content main-blog">
            <div class="grid">
                {% for post in posts %}
                    {% include 'main/components/_card.html.twig' with {post: post} only %}
                {% endfor %}
            </div>

            <div class="pagination">
                {{ knp_pagination_render(posts) }}
            </div>
        </div>

        <div class="sidebar">
            {{ sidebar() }}
        </div>
    </div>
</div>
{% endblock %}
